{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "./src/**/*",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./config",
    "./example**/*",
    "./src/test",
    "*.spec.ts"
  ]
}